<div class="jumbotron">
    <h1>Peliculas CODE5G</h1>
    <div class="container-fluid">
        <div class="row mb-3">
            @foreach (var movie in Movies)
            {
                <div class="col-md-4">
                    <div class="card flex-md-row mb-4 box-shadow h-md-300">
                        <div class="card-body d-flex flex-column align-items-start">
                            <div class="card">
                                <img src="@movie.Image" class="card-img-top" alt="..." height="270px" width="200px">
                                <div class="card-body">
                                    <h5 class="card-title">@movie.Nombre</h5>
                                    <p class="card-text">@movie.Idioma_original</p>
                                    <p class="card-text">@movie.Duracion.</p>
                                </div>
                                <div class="card-footer">
                                    <small class="text-muted">@movie.Fecha_estreno</small>
                                    <small class="text-muted">@movie.Genero</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
@code {
    [Parameter] public List<Movie> Movies {get; set;}
}
