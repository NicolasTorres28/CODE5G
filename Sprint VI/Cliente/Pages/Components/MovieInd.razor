<div style="margin-right: 2%; margin-bottom: 10px; text-align: center;">
    <a href="@urlmovie">
        <img src="@Movie.Poster" alt="Poster" style="width: 225px; height:300px;" />
    </a>
    <p style="max-width: 225px; height: 44px; font-size: 15px; font-weight: bold;"><a href="@urlmovie">@Movie.Name</a></p>
    <div>
        <a class="btn btn-info" href="peliculas/editar/@Movie.Id">Editar</a>
        <button type="button" class="btn btn-danger"
                @onclick="@(() => EliminarPelicula.InvokeAsync(Movie))">
            Borrar
        </button>
    </div>
</div>
 
@code {
    [Parameter] public Movie Movie { get; set; }
    [Parameter] public bool MostrarBotones { get; set; } = false;
    [Parameter] public EventCallback<Movie> EliminarPelicula { get; set; }
    private string urlmovie = string.Empty;
 
    protected override void OnInitialized()
    {
        urlmovie = $"movie/{Movie?.Id}/{Movie?.Name?.Replace(" ", "-")}";
    }
}
